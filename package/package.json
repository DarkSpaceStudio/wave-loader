{
  "name": "wave-loader",
  "version": "1.2.1",
  "description": "Skia-based animated wave ActivityIndicator replacement for React Native.",
  "keywords": [
    "react-native",
    "activity-indicator",
    "loader",
    "wave",
    "skia"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "react-native": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --sourcemap --clean --external react --external react-native --external @shopify/react-native-skia",
    "test": "npm run build && node --test test/**/*.test.cjs",
    "tsc": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "@shopify/react-native-skia": "^2.4.21",
    "react": ">=18",
    "react-native": ">=0.73"
  },
  "devDependencies": {
    "@types/react": "^19.1.10",
    "tsup": "^8.3.6",
    "typescript": "^5.9.2"
  }
}
